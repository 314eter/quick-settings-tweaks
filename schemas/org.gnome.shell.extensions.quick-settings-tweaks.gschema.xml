<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.quick-settings-tweaks" path="/org/gnome/shell/extensions/quick-settings-tweaks/">

    <!-- Array of button class names -->
    <key name="user-removed-buttons" type="as">
      <default>[]</default>
    </key>

    <!-- Array that including all of buttons on quick settings -->
    <!-- For creating checkboxes on prefs, extension automatically generate this value -->
    <key name="list-buttons" type="as">
      <default>[]</default>
    </key>

    <!-- Array of buttons that are hidden by default by the system.  -->
    <!-- This value is automatically generated and used for shows what button is hidden by system -->
    <key name="default-invisible-buttons" type="as">
      <default>[]</default>
    </key>

    <!-- JSON string that including displaying labels of button -->
    <!-- This value is automatically generated and shows what label
         each button has for the convenience of the user in the settings. -->
    <key name="button-labels" type="s">
      <default>"{}"</default>
    </key>

    <!-- list of enabled features -->
    <key name="enabled-features" type="as">
      <default>["volumeMixer","notifications","mediaControl"]</default>
    </key>
    
    <!-- notifications -->
    <key name="notifications-move-to-top" type="b">
      <default>false</default>
    </key>
    <key name="notifications-dnd-switch" type="b">
      <default>true</default>
    </key>
    <key name="notifications-integrated" type="b">
      <default>true</default>
    </key>
    <key name="datemenu-remove-notifications" type="b">
      <default>true</default>
    </key>
    <key name="datemenu-fix-weather-widget" type="b">
      <default>true</default>
    </key>

    <!-- media control -->
    <key name="media-control-compact-mode" type="b">
      <default>true</default>
    </key>
    <key name="datemenu-remove-media-control" type="b">
      <default>true</default>
    </key>

    <!-- volume mixer -->
    <key name="volume-mixer-move-to-bottom" type="b">
      <default>false</default>
    </key>
    <key name="volume-mixer-filtered-apps" type="as">
      <default>[]</default>
    </key>
    <key name="volume-mixer-show-description" type="b">
      <default>true</default>
    </key>
    <key name="volume-mixer-show-icon" type="b">
      <default>true</default>
    </key>
    <key name="volume-mixer-filter-mode" type="s">
      <choices>
        <choice value='block'/>
        <choice value='allow'/>
      </choices>
      <default>'block'</default>
    </key>
  </schema>
</schemalist>
